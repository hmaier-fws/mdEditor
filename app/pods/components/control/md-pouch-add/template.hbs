<div class="sync-add-pouch-container">
  {{#unless this.adding }}
    {{#if this.options.length}}
      <div class="sync-add-buttons-container">
        <button
          class="btn btn-lg btn-primary"
          {{action "addNew" @section.meta.type }}
        >
          {{fa-icon "plus"}} Add new {{@section.meta.type}}
        </button>
        <LinkTo @route="sync.import" @model={{@section.meta.type}} class="btn btn-lg btn-primary">
          <span class="fa fa-sign-in"></span>
          <span>Bulk import new {{@section.meta.list}}</span>
        </LinkTo>
      </div>
    {{/if}}
  {{else}}
    {{input/md-select
      label=@section.meta.title
      placeholder=@section.meta.title
      showValidations=true
      value=value
      valuePath="id"
      namePath="title"
      objectArray=this.options
    }}
    <div class="pouch-action-buttons">
      <button
        class="btn btn-md btn-warning"
        {{action "close" }}
      >
        {{fa-icon "undo"}} Cancel
      </button>
      <button
        class="btn btn-md btn-success"
        {{action "saveNew" @section.meta.type }}
      >
        {{fa-icon "floppy-o"}} Save
      </button>
    </div>
  {{/unless}}
</div>
